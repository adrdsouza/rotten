{{> header title="Verify Your Email Address" }}

<mj-section background-color="#fafafa">
    <mj-column>
        <mj-text color="#333333" font-family="Inter, sans-serif" font-size="16px" line-height="1.6" align="center">
            Thank you for creating an account with Rotten Hand. Click the button below to verify this email address and
            complete the registration process:
        </mj-text>

        <mj-button font-family="Inter, sans-serif"
                   background-color="#8a6d4a"
                   color="white"
                   font-weight="600"
                   border-radius="6px"
                   padding="12px 24px"
                   href="{{ verifyEmailAddressUrl }}?token={{ verificationToken }}">
            Verify Email Address
        </mj-button>
    </mj-column>
</mj-section>


{{> footer }}
