    "build:backend": "tsc && cp -r static dist/",
    "build:dashboard": "NODE_OPTIONS='--max-old-space-size=6144' vite build --logLevel warn",
    "dev:dashboard": "vite",
    "generate-schema": "ts-node scripts/generate-schema.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "start:server": "node ./dist/src/index.js",
    "start:worker": "node ./dist/src/index-worker.js",
    "start": "concurrently pnpm:start:*"
  },
